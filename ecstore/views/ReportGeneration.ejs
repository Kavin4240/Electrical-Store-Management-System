  <td><%=i.price[2] %></td>
  <td><%=i.quantity[0]%></td>
  <td><%=i.quantity[1]%></td>
  <td><%=i.quantity[2]%></td>
  <td><%=i.total[0]%></td>
  <td><%=i.total[1]%></td>
  <td><%=i.total[2]%></td>
  <td><%=i.total[0]+i.total[1]+i.total[2]%></td>
