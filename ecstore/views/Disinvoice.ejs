<!DOCTYPE html>
<html>
<head>
<title>Manage Invoices</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" ></script>
<script>
function del()
	{
		alert("Invoice data deleted successfully");
	
	}
</script>
<style>
a
{
  text-decoration: none;
  color:white; 
  font-family: 'Times New Roman', Times, serif;
}
.nav-link
{
   font-size:20px;
}
body{
  /* background-color: lightgreen; */
  font-family: 'Times New Roman', Times, serif;
}
</style>
</head>
<body>
  <br>
  <div class="alert-success text-center" id="s"></div>
<div class="container-fluid text-center">
<div><h2>Invoice List</h2></div>
 <!-- <div  class="alert alert-success text-center">
</div>  -->
<table class="table table-bordered">
  <tr class="table-info">
    <th>Invoice no</th>
    <th>Invoice date</th>
    <th>Cusname</th>
    <th>Phone number</th>
    <th>Address</th>
    <th colspan="3">Product Names</th>
    <th colspan="3">price</th>
    <th colspan="3">quantity</th>
    <th colspan="3">Total</th>
    <!-- <th>Grand Total</th> -->
    <th>Delete</th>
    <th>Print</th>
  </tr>
<%for(let i of invoice){%>
<tr class="table-info">
  <td><%=i.invoiceno %></td>
  <td><%=i.invoicedate %></td>
  <td><%=i.fname %></td>
  <td><%=i.phno %></td>
  <td><%=i.add %></td>
  <td><%=i.product_name[0]%></td>
  <td><%=i.product_name[1]%></td>
  <td><%=i.product_name[2]%></td>
  <td><%=i.price[0] %></td>
  <td><%=i.price[1] %></td>
  <td><%=i.price[2] %></td>
  <td><%=i.quantity[0] %></td>
  <td><%=i.quantity[1] %></td>
  <td><%=i.quantity[2] %></td>
  <td><%=i.total[0] %></td>
  <td><%=i.total[1] %></td>
  <td><%=i.total[2] %></td>
 
  <td><button class="btn btn-danger" onclick="del()"><a href="/invoice/<%=i._id %>/delete">Delete</a></button></td>
  <td><button class="btn btn-success"><a href="/invoice/<%=i._id %>/print">Print</a></button></td>  
  
</form>
</tr>
<%}%>
</table>
</div>
</body>
</html>