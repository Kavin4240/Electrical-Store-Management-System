<!DOCTYPE html>
<html>
<head>
<title>Productadd</title>
<script>
	function add()
	{
		document.getElementById("s").innerHTML="Employee added successfully";
	}
</script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
	body{
		background-color: beige;
	}
	label{
		color:brown;
		font-family: 'Times New Roman', Times, serif;
	}
	.btn
	{
		font-family: 'Times New Roman', Times, serif;
	}
	h2{
		font-family: 'Times New Roman', Times, serif;
	}
	input{
		font-family: 'Times New Roman', Times, serif;
	    color:darkgoldenrod;
	}
</style>
</head>
<body style="background-image:url('');background-size:cover;background-repeat: no-repeat;">
	<br>
	<div class="alert-success text-center" id="s"></div>
<div class="container-fluid">
<div class="text-center"><h2>Add Employee</h2></div>
<form action="/add-employee" method="POST"  style="max-width:500px; margin:0 auto;">
<input type="hidden">
<div class="border border-primary rounded p-3">
<div class="form-group row">
<label class="col-sm-4 ">Emp_Name:</label>
<div class="col-sm-8">
<input type="text" id="ename"  name="ename" class="form-control" required maxlength="20" >
</div>
</div>
<br>
<div class="form-group row">
<label class="col-sm-4 col-form-label">Contact_Number:</label>
<div class="col-sm-8">
<input type="number" class="form-control" id="phno" name="phno" required  maxlength="10">
</div>
</div>
<br>
<div class="form-group row">
<label class="col-sm-4 col-form-label">E-mail id</label>
<div class="col-sm-8">
<input type="email"  class="form-control" id="email" name="email" required maxlength="50">
</div>
</div>
<br>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Year of experience</label>
    <div class="col-sm-8">
    <input type="number"  class="form-control" id="exp" name="exp" required maxlength="50">
    </div>
    </div>
    <br>
<div class="form-group row">
    <label class="col-sm-4 col-form-label">Salary</label>
    <div class="col-sm-8">
    <input type="number"  class="form-control" id="sal" name="sal" required maxlength="50">
    </div>
    </div>
	<br>
	<div class="form-group row">
		<label class="col-sm-4 col-form-label">Position</label>
		<div class="col-sm-8">
		<input type="text"  class="form-control" id="pos" name="pos" required maxlength="50">
		</div>
		</div>
    <br>
	<div class="form-group row">
		<label class="col-sm-4 col-form-label">Address</label>
		<div class="col-sm-8">
		<input type="text"  class="form-control" id="add" name="add" required maxlength="50">
		</div>
		</div>
		<br>
<div class="text-center">
<button type="submit" id="sub"  class="btn btn-danger" onclick="add()" >Submit</button>
<!-- <a href="/add-product" type="btn btn-success">Save</a> -->
<a class="btn btn-warning" href="/">Cancel</a>

</div>
<br>
</div>
</form>
</div>
</body>
</html>